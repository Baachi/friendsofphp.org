<table class="table table-bordered table-responsive" id="table-{{ name }}">
    <thead class="thead-inverse">
        <tr>
            <th class="w-25 text-center">
                <em class="fa fa-calendar fa-fw"></em>
                <span class="hidden-sm-down">When</span>
            </th>
            <th class="w-25 text-center">
                <em class="fa fa-map-marker fa-fw"></em>
                <span class="hidden-sm-down">Where</span>
            </th>
            <th class="w-50 text-center">
                <em class="fa fa-meetup fa-fw"></em>
                <span class="hidden-sm-down">Meetup</span>
            </th>
        </tr>
    </thead>

    {% for meetup in meetups %}
        {% set daysFromToday = diffFromTodayInDays(meetup.start) %}

        {% if daysFromToday >= minDays and daysFromToday < maxDays %}
            <tr class="meetup" data-longitude="{{ meetup.longitude }}" data-latitude="{{ meetup.latitude}}">
                <td class="w-25">
                    <nobr>{{ meetup.start|date("D m-d") }}</nobr>
                    <br>
                    <small class="text-secondary">{{ meetup.start|date("H:i") }}</small>
                </td>
                <td class="w-25">
                    {{ meetup.city }}
                    <br>
                    <small class="text-secondary">{{ meetup.country }}</small>
                </td>
                <td class="w-50">
                    <strong>
                        <a href="{{ meetup.url }}">{{ meetup.name }}</a>
                    </strong>
                    <br>
                    <small class="text-secondary">{{ meetup.userGroup }}</small>
                </td>
            </tr>
        {% endif %}
    {% endfor %}
</table>
