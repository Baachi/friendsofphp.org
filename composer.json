{
    "name": "allfriendsofphp/allfriendsofphp",
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "^6.3",
        "symfony/var-dumper": "^4.0",
        "nette/utils": "^2.5",
        "symplify/statie": "^4.5",
        "twig/twig": "^2.4.8",
        "rinvex/country": "^3.1"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^4.4",
        "slam/php-cs-fixer-extensions": "^1.16",
        "phpstan/phpstan": "0.10.*",
        "phpstan/phpdoc-parser": "0.3 as 0.2"
    },
    "autoload": {
        "psr-4": {
            "AllFriensOfPhp\\": "src"
        },
        "files": [
            "bin/import-groups-from-php-ug.php",
            "bin/import-meetups-from-meetups.php"
        ]
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check bin src",
        "fix-cs": "vendor/bin/ecs check bin src --fix",
        "phpstan": "vendor/bin/phpstan analyse bin src --level max --configuration phpstan.neon"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
